{% extends 'base.html.twig' %}

{% block title %}Nos Voitures{% endblock %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/article.css') }}">
{% endblock %}

{% block body %}
    <section class="header-section">
        <h1>Nos Voitures Disponibles</h1>
        <p>Découvrez notre sélection exclusive de voitures disponibles à la vente ou à la location.</p>
    </section>

    <section class="voitures">
        {% for voiture in voitures %}
            <div class="voiture">
                <div class="voiture-header">
                    <h2>{{ voiture.marque }} {{ voiture.modele }}</h2>
                </div>
                <div class="voiture-body">
                    {% if voiture.imageUrl %}
                        <a href="{{ path('ajouter_au_panier', {'id': voiture.id}) }}">
                            <img src="{{ voiture.imageUrl }}" alt="{{ voiture.marque }} {{ voiture.modele }}" class="voiture-image">
                        </a>
                    {% else %}
                        <p><em>Aucune image disponible</em></p>
                    {% endif %}
                </div>
                <div class="voiture-footer">
                    <p class="voiture-prix">Prix: {{ voiture.prix | number_format(2, ',', ' ') }} €</p>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}
